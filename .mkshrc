# this part belongs to https://notabug.org/Aicaya
myprompt(){
    [ "$PWD" = "$HOME" ] && aa='λ' || aa="${PWD##*/} λ"
    printf ' \033[0;35m[%s]\033[0;33m%s \033[0;37m» \033[0m' "$aa" 

}

PS1="\$(myprompt)"

# aliases
# the first two don't benefit anyone else, really 

# alias scrot=/home/ek/Dev/scripts/scrot
# alias colorset=/home/ek/Dev/scripts/colorset

alias ls='ls -L --color=auto --group-directories-first'
alias la='ls --almost-all --color=auto'
alias vim='nvim'
alias ..='cd ..'

export SHELL="mksh"
export TERMINAL="st"
export EDITOR='nvim'

# set ctrl / capslock for emacs
/usr/bin/setxkbmap -option "ctrl:swapcaps"
